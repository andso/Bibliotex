<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/bibliotex</property>
    <property name="hibernate.connection.username">bibliotex</property>
    <property name="hibernate.connection.password">bibliotex</property>
    <property name="hibernate.connection.datasource">bibliotex</property>
    <class-cache class="TestCache" include="all" region="" usage="read-only"/>
  </session-factory>
</hibernate-configuration>
